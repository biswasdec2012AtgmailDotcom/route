<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/card_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        card_view:cardBackgroundColor="@android:color/white"
                                        card_view:cardElevation="5dp"
                                        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_wheel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.redmart.bishwajeet.routelist.view.customViews.RouteTextView
                        android:id="@+id/tv_route_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/iv_accesibility"
                        android:text="Testing"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="20sp"
                        card_view:fontName="medium"/>

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_accesibility"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:src="@drawable/accessibility"
                        />
                </RelativeLayout>

                <com.redmart.bishwajeet.routelist.view.customViews.RouteTextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="hfjgdjhgfjdhgfjhdsgfjhsdgfjhgsdjhfgdsjsjhgfjs"
                    android:textSize="15sp"
                    card_view:fontName="regular"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
